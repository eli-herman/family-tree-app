rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Deny all by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Family data â€” auth-gated for MVP
    match /families/{familyId} {
      allow read, write: if request.auth != null;

      match /members/{memberId} {
        allow read, write: if request.auth != null;
      }

      match /units/{unitId} {
        allow read, write: if request.auth != null;
      }
    }
  }
}
